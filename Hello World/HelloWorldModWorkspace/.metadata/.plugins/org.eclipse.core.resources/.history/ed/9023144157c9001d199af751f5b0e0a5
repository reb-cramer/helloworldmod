package com.satiryz.helloworld.init;

import com.google.common.base.Supplier;
import com.satiryz.helloworld.HelloWorld;

import net.minecraft.world.item.Item;
import net.minecraftforge.registries.DeferredRegister;
import net.minecraftforge.registries.ForgeRegistries;
import net.minecraftforge.registries.RegistryObject;

public class ItemInit {
	public static final DeferredRegister<Item> ITEMS = DeferredRegister.create(ForgeRegistries.ITEMS, HelloWorld.MOD_ID);

	public static final RegistryObject<Item> HELLO_WORLD_ITEM = register("hello_world_item", () -> new Item(new Item.Properties().tab(HelloWorld.HELLO_WORLD_TAB)));
	
	private static <T extends Item> RegistryObject<T> register(final String name, final Supplier<T> item) {
		return ITEMS.register(name, item);
	};
};
